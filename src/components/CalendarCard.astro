---
const { href, text, target = '_blank', icon = null } = Astro.props;
---

<div class="relative inline-block">
    <div class="w-full h-full bg-gray-900 ml-0.5 mt-0.5 rounded-lg absolute left-0 top-0">
    </div>

    <a class="relative inline-block px-5 py-2 text-lg font-bold text-center text-gray-900 no-underline whitespace-no-wrap align-middle transition-colors bg-white border-2 border-gray-900 border-solid rounded-md shadow-xs cursor-pointer select-none hover:bg-yellow-100 hover:shadow-xs hover:text-gray-900 focus:shadow-xs"
        href={href} target={target}>
        <div class="flex flex-row items-center justify-center gap-2">
            {icon && (<div class="h-4 w-4">
                <Fragment set:html={icon} />
            </div>)}
            <span>{text}</span>
        </div>
    </a>
</div>